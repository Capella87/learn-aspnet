{
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft.AspNetCore": "Warning",
        "Microsoft.AspNetCore.Mvc": "Error"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/Production/.log",
          "outputTemplate": "{Timestamp:o} [{Level:u3}] ({Application}/{MachineName}/{ThreadId}/{ThreadName}) {Message}{NewLine}{Exception}",
          "rollingInterval": "Month"
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithThreadId"
    ],
    "Destructure": [
      {
        "Name": "ToMaximumDepth",
        "Args": {
          "maximumDestructuringDepth": 4
        }
      },
      {
        "Name": "ToMaximumStringLength",
        "Args": {
          "maximumStringLength": 100
        }
      },
      {
        "Name": "ToMaximumCollectionCount",
        "Args": {
          "maximumCollectionCount": 10
        }
      }
    ],
    "Properties": {
      "Application": "ControllerWebAPI"
    }
  },
  "AllowedHosts": "*",
  "Kestrel": {
    "EndpointDefaults": {
      "Protocols": "Http1AndHttp2AndHttp3",
      "ClientCertificateMode": "AllowCertificate",
      "SslProtocols": [
        "Tls12",
        "Tls13"
      ]
    },
    "Endpoints": {
      "HttpsDefaultCert": {
        "Url": "https://localhost:5929",
        "Protocols": "Http1AndHttp2AndHttp3"
      },
      "Http": {
        "Url": "http://localhost:5950"
      }
    }
  },
  "JwtSettings": {
    "AccessToken": {
      "ValidateIssuer": true,
      "ValidateIssuerSigningKey": true,
      "Issuers": [
        "https://localhost:5929"
      ],
      "ValidateAudience": true,
      "Audiences": [
        "https://localhost:5929",
        "http://localhost:5950"
      ],
      "SecretKey": "",
      "SigningAlgorithm": "HS256",
      "ExpiresInMinutes": 20
    },
    "RefreshToken": {
      "ExpiresInMinutes": 1440
    }
  },
  "ConnectionStringProfile": "DefaultConnection",

  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=5432;Database=;Username=;Password=;SSL Mode=Prefer;Trust Server Certificate=false"
  }

}
