@model FutureValueModel

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h4 class="fw-bold">@DateTime.Now</h4>
</div>

<div class="text-center">
    <h1 class="display-4">Capella87</h1>
    <p><a href="https://capelladev.com">More details on my humble website..</a>.</p>
</div>

<!--
<div class="text-center">
    <p>Name: @ViewBag.Name</p>
    <p>Future Value: @ViewBag.FV.ToString("C2")</p>
</div>
-->

<div class="text-body">
    <h2 class="display-6 text-center m-6">Future Value Calculator</h2>
    <form asp-action="Index" method="post">
        <div class="row row-col-3 mb-3 align-items-center">
            <div class="col-md input-group input-group-lg">
                <span class="input-group-text">$</span>
                <div class="form-floating flex-lg-grow-1">
                    <input class="form-control" id="Group1" placeholder="Monthly Investment" asp-for="MonthlyInvestment" value="12" min="1" />
                    <label class="form-label" for="Group1" asp-for="MonthlyInvestment">Monthly Investment</label>
                </div>
            </div>
            <div class="col-md input-group input-group-lg">
                <div class="form-floating flex-lg-grow-1">
                    <input asp-for="YearlyInterestRate" class="form-control" id="Group2" placeholder="Yearly Interest Rate" value="5.0" min="0.0" />
                    <label class="form-label" for="Group2" asp-for="YearlyInterestRate">Yearly Interest Rate</label>
                </div>
                <span class="input-group-text" id="basic-addon2">%</span>
            </div>
            <div class="col-md input-group input-group-lg">
                <!-- <div class="form-floating flex-lg-grow-1"> -->
                <input asp-for="Years" class="form-control form-control-lg" id="Group3" min="0" value="10" />
                <!-- <label asp-for="Years" class="form-label mb-0" for="Group3">Years</label> -->
                <!-- </div> -->
                <span class="input-group-text" id="basic-addon2">Years</span>
            </div>
        </div>
        <div class="d-flex justify-content-center mb-3 gap-3">
            <button type="submit" class="btn btn-primary btn-lg" data-toggle="collapse">Calculate</button>
            <div class="p-2">
                <a asp-action="Index">Clear</a>
            </div>
        </div>
    </form>
</div>
